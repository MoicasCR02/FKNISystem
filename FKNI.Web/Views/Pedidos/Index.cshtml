@model IEnumerable<FKNI.Application.DTOs.PedidosDTO>

@{
    ViewData["Title"] = "Pedidos";
}

<section class="section">
    <div class="container">
        <!-- Header -->
        <div class="section-header d-flex justify-between items-center">
            <div>
                <h2 class="section-title m-0">Lista de Pedidos</h2>
                <p class="section-subtitle m-0">Gestión de pedidos recientes y su estado</p>
            </div>
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Crear nuevo pedido
                </a>
            </div>
        </div>

        <!-- Tabla dentro de card -->
        <div class="card shadow-md">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th class="text-start">ID</th>
                                <th class="text-start">Cliente</th>
                                <th class="text-start">Método de Entrega</th>
                                <th class="text-start">Fecha</th>
                                <th class="text-start">Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start">@item.IdPedido</td>
                                    <td class="text-start">@item.IdClienteNavigation?.NombreUsuario</td>
                                    <td class="text-start">@item.MetodoEntrega</td>
                                    <td class="text-start">@item.FechaPedido?.ToShortDateString()</td>
                                    <td class="text-start">
                                        <span class="badge bg-nude text-black">@item.IdEstado</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-inline-flex gap-2">
                                            <a asp-action="Edit" asp-route-id="@item.IdPedido" class="btn btn-secondary btn-sm" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.IdPedido" class="btn btn-nude btn-sm" title="Detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdPedido" class="btn btn-ghost btn-sm" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (!(Model?.Any() ?? false))
                    {
                        <div class="text-center text-gray-600 py-4">
                            No hay pedidos registrados.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

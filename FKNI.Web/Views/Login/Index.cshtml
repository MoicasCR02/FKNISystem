@model FKNI.Web.ViewModels.ViewModelLogin
@{
    Layout = null;
    ViewData["Title"] = "Iniciar sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FKNI.Web</title>

    <!-- Nude Project Design System -->
    <link rel="stylesheet" href="~/css/nude-project-design.css" />
    <!-- Bootstrap (grid/utilidades + spinner) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* Página de autenticación a pantalla completa con los colores Nude */
        body.auth-body {
            min-height: 100vh;
            display: grid;
            place-items: center;
            background: linear-gradient(135deg, var(--color-gray-900), #0f0f0f);
            color: var(--color-white);
        }
        /* Contenedor centrado y angosto */
        .auth-container {
            width: 100%;
            max-width: 420px;
            padding: var(--space-6);
        }
        /* Card con estética Nude */
        .auth-card.card {
            background: rgba(255,255,255,0.06);
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255,255,255,0.08);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
        }

        .auth-card .card-header {
            background: linear-gradient(135deg, var(--color-brown-primary), var(--color-nude-primary));
            color: var(--color-white);
            padding: var(--space-5) var(--space-6);
            border: 0;
        }

        .auth-card .card-body {
            padding: var(--space-6);
        }

        /* Inputs Nude */
        .form-label {
            color: var(--color-white);
        }

        .form-input {
            background-color: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.18);
            color: var(--color-white);
        }

            .form-input::placeholder {
                color: var(--color-gray-400);
            }

            .form-input:focus {
                background-color: rgba(255,255,255,0.12);
                border-color: var(--color-nude-primary);
                box-shadow: 0 0 0 3px rgba(227,188,154,0.18);
                outline: none;
            }

        /* Grupo de icono + input con look limpio */
        .input-wrap {
            display: flex;
            align-items: center;
            gap: var(--space-3);
            background-color: rgba(255,255,255,0.06);
            border: 1px solid rgba(255,255,255,0.18);
            border-radius: var(--radius-sm);
            padding: var(--space-2) var(--space-3);
        }

            .input-wrap i {
                opacity: .85;
            }

            .input-wrap .form-input {
                background: transparent;
                border: none;
                box-shadow: none;
                flex: 1;
                padding: var(--space-2) 0;
            }

        /* Botón principal con paleta Nude */
        .btn-primary {
            background-color: var(--color-brown-primary);
            color: var(--color-white);
            border: none;
            text-transform: uppercase;
            letter-spacing: .04em;
        }

            .btn-primary:hover {
                background-color: var(--color-brown-dark);
                transform: translateY(-1px);
                box-shadow: var(--shadow-md);
            }

        /* Spinner centrado */
        #loader {
            display: none;
        }

        /* Alertas con alto contraste sobre fondo oscuro */
        .alert {
            border-radius: var(--radius-sm);
        }
    </style>
</head>

<body class="auth-body">
    <main class="auth-container">
        <div class="card auth-card">
            <div class="card-header text-center">
                <h1 class="m-0 fs-4 d-flex align-items-center justify-content-center gap-2">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Iniciar sesión
                </h1>
            </div>

            <div class="card-body">
                <form asp-controller="Login" asp-action="LogIn" method="post" asp-antiforgery="true" class="grid grid-cols-1 gap-6">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="form-error"></div>

                    <!-- Usuario -->
                    <div class="form-group">
                        <label asp-for="User" class="form-label">Usuario</label>
                        <div class="input-wrap">
                            <i class="bi bi-person"></i>
                            <input asp-for="User" class="form-input" type="text" autocomplete="username"
                                   placeholder="Ingresa tu usuario" />
                        </div>
                        <span asp-validation-for="User" class="form-error"></span>
                    </div>

                    <!-- Contraseña -->
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <div class="input-wrap">
                            <i class="bi bi-lock"></i>
                            <input asp-for="Password" class="form-input" type="password" autocomplete="current-password"
                                   placeholder="Ingresa tu contraseña" />
                        </div>
                        <span asp-validation-for="Password" class="form-error"></span>
                    </div>

                    <!-- Acción -->
                    <div class="d-grid gap-2 mb-3 mt-2">
                        <button class="btn btn-primary" type="submit" onclick="spinnerEffect()">
                            <i class="bi bi-box-arrow-in-right"></i> Ingresar
                        </button>
                    </div>

                    <!-- Enlace para registrarse -->
                    <div class="text-center mt-3">
                        <span>¿No tienes una cuenta?</span>
                        <a asp-controller="Usuarios" asp-action="Create" class="text-decoration-none fw-bold">
                            Regístrate aquí
                        </a>
                    </div>

                    <!-- Spinner -->
                    <div id="loader" class="text-center mt-3">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger mt-3 text-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Message
                        </div>
                    }
                </form>
            </div>
        </div>
    </main>

    <script>
        function spinnerEffect() {
            document.getElementById("loader").style.display = "block";
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

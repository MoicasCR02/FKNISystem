@model IEnumerable<FKNI.Application.DTOs.ProductosDTO>

@{
    ViewData["Title"] = "Productos – Admin";
}

<section class="section">
    <div class="container">
        <!-- Header (mismo estilo que reseñas/promociones) -->
        <div class="section-header d-flex justify-between items-center">
            <div>
                <h2 class="section-title m-0">
                    <i class="bi bi-box-open me-2"></i>
                    Productos (Admin)
                </h2>
                <p class="section-subtitle m-0">Gestión administrativa del catálogo de productos</p>
            </div>
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Crear producto
                </a>
            </div>
        </div>

        <!-- Tabla dentro de card (mismo estilo que reseñas/promociones) -->
        <div class="card shadow-md">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().IdProducto)</th>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().NombreProducto)</th>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().Descripcion)</th>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().Precio)</th>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().Stock)</th>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().PromedioValoracion)</th>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().IdCategoria)</th>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().Estado)</th>
                                <th class="text-start">@Html.DisplayNameFor(m => m.First().Descuento)</th>
                                <th class="text-center" style="width:160px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    var activo = false;
                                    try { activo = Convert.ToBoolean(item.Estado); } catch { /* por si viene distinto */ }

                                    // Promedio (visual) - Tu lógica exacta
                                    decimal promedio = 0m;
                                    int full = 0; bool half = false; int empty = 5;
                                    try
                                    {
                                        promedio = (decimal)item.PromedioValoracion;
                                        full = (int)Math.Floor(promedio);
                                        half = (promedio - full) >= 0.5m;
                                        empty = 5 - full - (half ? 1 : 0);
                                    }
                                    catch { /* segura */ }

                                    // Precio - Tu lógica exacta
                                    string precioTxt = $"₡{(decimal)(item?.Precio ?? 0):N2}";

                                    // Descuento - Tu lógica exacta
                                    decimal desc = 0m;
                                    try { desc = Convert.ToDecimal(item.Descuento); } catch { }

                                    <tr>
                                        <td class="text-start">
                                            <span class="badge bg-nude text-black">@item.IdProducto</span>
                                        </td>

                                        <td class="text-start">
                                            <div class="product-name-admin">
                                                <i class="bi bi-box"></i>
                                                <span>@item.NombreProducto</span>
                                            </div>
                                        </td>

                                        <td class="text-start">
                                            <div class="description-truncate" title="@item.Descripcion">
                                                @item.Descripcion
                                            </div>
                                        </td>

                                        <td class="text-start">
                                            <span class="price-admin">@precioTxt</span>
                                        </td>

                                        <td class="text-start">
                                            <span class="stock-badge-admin @(item.Stock > 10 ? "stock-good" : item.Stock > 0 ? "stock-low" : "stock-out")">
                                                @item.Stock
                                            </span>
                                        </td>

                                        <td class="text-start">
                                            <div class="rating-admin" aria-label="Valoración @promedio.ToString("0.0") de 5">
                                                <div class="stars-admin">
                                                    @for (int i = 0; i < full; i++)
                                                    {
                                                        <i class="bi bi-star-fill star-filled"></i>
                                                    }
                                                    @if (half)
                                                    {
                                                        <i class="bi bi-star-half star-filled"></i>
                                                    }
                                                    @for (int i = 0; i < empty; i++)
                                                    {
                                                        <i class="bi bi-star star-empty"></i>
                                                    }
                                        </div>
                                        <span class="rating-score-admin">(@promedio.ToString("0.0"))</span>
                                    </div>
                                </td>

                                <td class="text-start">
                                    <div class="category-admin">
                                        <i class="bi bi-collection"></i>
                                        <span>
                                            @* Tu lógica exacta de reflection *@
                                            @(item.GetType().GetProperty("NombreCategoria") != null
                                                                                        ? (item.GetType().GetProperty("NombreCategoria")!.GetValue(item)?.ToString() ?? item.IdCategoria?.ToString())
                                                                                        : item.IdCategoria?.ToString())
                                        </span>
                                    </div>
                                </td>

                                        <td class="text-start">
                                    @if (activo)
                                            {
                                                <span class="badge bg-nude text-black badge-status">
                                                    <i class="bi bi-check-circle me-1"></i>Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-gray-200 text-black badge-status">
                                                    <i class="bi bi-x-circle me-1"></i>Inactivo
                                                </span>
                                            }
                                        </td>

                                        <td class="text-start">
                                            @if (desc > 0)
                                            {
                                                <span class="discount-badge-table">
                                                    <i class="bi bi-tag-fill me-1"></i>-@desc.ToString("0")%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-600">—</span>
                                            }
                                        </td>

                                        <td class="text-center">
                                            <div class="d-inline-flex gap-2">
                                                <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-secondary btn-sm" title="Editar">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-nude btn-sm" title="Detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" class="text-center text-gray-600 py-4">
                                        <i class="bi bi-inbox me-2"></i>
                                        No hay productos para mostrar.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
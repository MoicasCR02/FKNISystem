@model FKNI.Application.DTOs.ProductosDTO

@{
    ViewData["Title"] = "Detalles del Producto";
}

<!-- Product Details Header -->
<section class="section">
    <div class="container">
        <!-- Breadcrumb -->
        <nav class="breadcrumb-nav mb-8">
            <a asp-action="Index" class="breadcrumb-link">
                <i class="bi bi-arrow-left"></i>
                <span>Volver al listado</span>
            </a>
        </nav>

        <!-- Product Main Section -->
        <div class="product-details-container">

            <!-- Product Images - Instagram Style Grid -->
            <div class="product-images-section">
                @if (Model.IdImagen != null && Model.IdImagen.Any())
                {
                    <div class="instagram-grid" id="productImagesGrid">
                        @{
                            var imagenes = Model.IdImagen.ToList();
                            var totalImages = imagenes.Count;
                        }

                        <!-- Navigation Arrows for Multiple Images -->
                        @if (totalImages > 1)
                        {
                            <div class="instagram-nav-arrows">
                                <button class="instagram-nav-arrow" id="prevImageBtn" onclick="previousImage()">
                                    <i class="bi bi-chevron-left"></i>
                                </button>
                                <button class="instagram-nav-arrow" id="nextImageBtn" onclick="nextImageGrid()">
                                    <i class="bi bi-chevron-right"></i>
                                </button>
                            </div>
                        }

                        <!-- Image Counter -->
                        @if (totalImages > 1)
                        {
                            <div class="instagram-counter" id="imageCounter">
                                1 / @totalImages
                            </div>
                        }

                        @if (totalImages == 1)
                        {
                            <!-- Single Image -->
                            <div class="instagram-item single">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[0].UrlImagen)"
                                     alt="Imagen del producto"
                                     class="instagram-image"
                                     onclick="openLightbox(0)" />
                            </div>
                        }
                        else if (totalImages == 2)
                        {
                            <!-- Two Images -->
                            @for (int i = 0; i < 2; i++)
                            {
                                <div class="instagram-item half" data-image-index="@i">
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[i].UrlImagen)"
                                         alt="Imagen del producto"
                                         class="instagram-image"
                                         onclick="openLightbox(@i)" />
                                </div>
                            }
                        }
                        else if (totalImages == 3)
                        {
                            <!-- Three Images -->
                            <div class="instagram-item large" data-image-index="0">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[0].UrlImagen)"
                                     alt="Imagen del producto"
                                     class="instagram-image"
                                     onclick="openLightbox(0)" />
                            </div>
                            @for (int i = 1; i < 3; i++)
                            {
                                <div class="instagram-item small" data-image-index="@i">
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[i].UrlImagen)"
                                         alt="Imagen del producto"
                                         class="instagram-image"
                                         onclick="openLightbox(@i)" />
                                </div>
                            }
                        }
                        else if (totalImages >= 4)
                        {
                            <!-- Four or More Images -->
                            <div class="instagram-item large" data-image-index="0">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[0].UrlImagen)"
                                     alt="Imagen del producto"
                                     class="instagram-image"
                                     onclick="openLightbox(0)" />
                            </div>
                            <div class="instagram-item medium" data-image-index="1">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[1].UrlImagen)"
                                     alt="Imagen del producto"
                                     class="instagram-image"
                                     onclick="openLightbox(1)" />
                            </div>
                            <div class="instagram-item small" data-image-index="2">
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[2].UrlImagen)"
                                     alt="Imagen del producto"
                                     class="instagram-image"
                                     onclick="openLightbox(2)" />
                            </div>
                            @if (totalImages > 4)
                            {
                                <div class="instagram-item small overlay" data-image-index="3">
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[3].UrlImagen)"
                                         alt="Imagen del producto"
                                         class="instagram-image"
                                         onclick="openLightbox(3)" />
                                    <div class="image-overlay" onclick="openLightbox(3)">
                                        <span class="overlay-text">+@(totalImages - 4)</span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="instagram-item small" data-image-index="3">
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagenes[3].UrlImagen)"
                                         alt="Imagen del producto"
                                         class="instagram-image"
                                         onclick="openLightbox(3)" />
                                </div>
                            }
                        }
                    </div>
                }
                else
                {
                    <!-- No Images Placeholder -->
                    <div class="instagram-grid">
                        <div class="instagram-item single">
                            <div class="product-no-image">
                                <i class="bi bi-image"></i>
                                <span>Sin imágenes disponibles</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Product Information -->
            <div class="product-info-section">

                <!-- Product Header -->
                <div class="product-header">
                    <h1 class="product-title">@Model.NombreProducto</h1>
                    <p class="product-description">@Model.Descripcion</p>

                    <!-- Rating (tu lógica exacta) -->
                    @if (Model.Resenas != null && Model.Resenas.Any())
                    {
                        int totalValoraciones = (int)Model.Resenas.Sum(r => r.Valoracion);
                        int cantidad = Model.Resenas.Count();
                        decimal promedio = (decimal)totalValoraciones / cantidad;

                        int estrellas = (int)Math.Floor(promedio);
                        bool media = (promedio - estrellas) >= 0.5m;
                        int vacias = 5 - estrellas - (media ? 1 : 0);

                        <div class="product-rating-display">
                            <div class="star-rating large">
                                @for (int i = 0; i < estrellas; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                @if (media)
                                {
                                    <i class="bi bi-star-half"></i>
                                }
                                @for (int i = 0; i < vacias; i++)
                                {
                                    <i class="bi bi-star"></i>
                                }
                            </div>
                            <span class="rating-text large">(@promedio.ToString("0.0"))</span>
                        </div>
                    }
                </div>

                <!-- Product Details -->
                <div class="product-details-grid">
                    <div class="detail-item">
                        <span class="detail-label">ID del Producto</span>
                        <span class="detail-value">@Model.IdProducto</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">Precio</span>
                        <span class="detail-value price">$@Model.Precio</span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">Stock</span>
                        <span class="detail-value stock @(Model.Stock > 10 ? "in-stock" : Model.Stock > 0 ? "low-stock" : "out-of-stock")">
                            @if (Model.Stock > 10)
                            {
                                <i class="bi bi-check-circle"></i>
                                <span>@Model.Stock unidades</span>
                            }
                            else if (Model.Stock > 0)
                            {
                                <i class="bi bi-exclamation-triangle"></i>
                                <span>¡Últimas @Model.Stock unidades!</span>
                            }
                            else
                            {
                                <i class="bi bi-x-circle"></i>
                                <span>Agotado</span>
                            }
                        </span>
                    </div>

                    <div class="detail-item">
                        <span class="detail-label">Valoración Promedio</span>
                        <span class="detail-value">
                            @if (Model.Resenas != null && Model.Resenas.Any())
                            {
                                int totalValoraciones = (int)Model.Resenas.Sum(r => r.Valoracion);
                                int cantidad = Model.Resenas.Count();
                                decimal promedio = (decimal)totalValoraciones / cantidad;

                                int estrellas = (int)Math.Floor(promedio);
                                bool media = (promedio - estrellas) >= 0.5m;
                                int vacias = 5 - estrellas - (media ? 1 : 0);

                                <div class="star-rating">
                                    @for (int i = 0; i < estrellas; i++)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    @if (media)
                                    {
                                        <i class="bi bi-star-half"></i>
                                    }
                                    @for (int i = 0; i < vacias; i++)
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                </div>
                                <span class="rating-text">(@promedio.ToString("0.0"))</span>
                            }
                            else
                            {
                                <span class="text-gray-500">Sin valoraciones</span>
                            }
                        </span>
                    </div>

                    @if (Model.IdCategoriaNavigation?.NombreCategoria != null)
                    {
                        <div class="detail-item">
                            <span class="detail-label">Categoría</span>
                            <span class="detail-value category">@Model.IdCategoriaNavigation.NombreCategoria</span>
                        </div>
                    }

                   @*  <div class="detail-item">
                        <span class="detail-label">Estado</span>
                        <span class="detail-value status">
                            <span class="status-badge @(Model.Estado?.ToLower() == "activo" ? "active" : "inactive")">
                                @Model.Estado
                            </span>
                        </span>
                    </div> *@
                </div>

                <!-- Tags -->
                @if (Model.IdEtiqueta != null && Model.IdEtiqueta.Any())
                {
                    <div class="product-tags">
                        <h3 class="tags-title">Etiquetas</h3>
                        <div class="tags-container">
                            @foreach (var tag in Model.IdEtiqueta)
                            {
                                <span class="product-tag">#@tag.NombreEtiqueta</span>
                            }
                        </div>
                    </div>
                }

                <!-- Action Buttons -->
                <div class="product-actions">
                    @if (Model.Stock > 0)
                    {
                        <button class="btn btn-primary btn-lg" onclick="addToCart(@Model.IdProducto)">
                            <i class="bi bi-bag-plus"></i>
                            <span>Agregar al Carrito</span>
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg" disabled>
                            <i class="bi bi-exclamation-circle"></i>
                            <span>No Disponible</span>
                        </button>
                    }

                    <button class="btn btn-nude btn-lg" onclick="toggleWishlist(@Model.IdProducto)">
                        <i class="bi bi-heart"></i>
                        <span>Favoritos</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Image Lightbox Modal -->
<div class="lightbox-overlay" id="lightboxOverlay" onclick="closeLightbox()">
    <div class="lightbox-container">
        <button class="lightbox-close" onclick="closeLightbox()">
            <i class="bi bi-x-lg"></i>
        </button>
        <button class="lightbox-prev" onclick="prevImage()">
            <i class="bi bi-chevron-left"></i>
        </button>
        <button class="lightbox-next" onclick="nextImage()">
            <i class="bi bi-chevron-right"></i>
        </button>
        <img class="lightbox-image" id="lightboxImage" src="" alt="">
        <div class="lightbox-counter" id="lightboxCounter"></div>
    </div>
</div>

<script>
    // Image Lightbox and Instagram Grid Navigation
    let currentImageIndex = 0;
    let currentGridIndex = 0;
    let productImages = [];
    let totalGridImages = 0;

    document.addEventListener('DOMContentLoaded', function() {
        // Collect all product images for lightbox
        const images = document.querySelectorAll('.instagram-image');
        productImages = Array.from(images).map(img => img.src);

        // Get total images for grid navigation
        const imageItems = document.querySelectorAll('.instagram-item[data-image-index]');
        totalGridImages = imageItems.length;

        // Initialize grid navigation
        updateImageDisplay();
    });

    // Grid Navigation Functions
    function previousImage() {
        if (totalGridImages <= 1) return;

        currentGridIndex = (currentGridIndex - 1 + totalGridImages) % totalGridImages;
        updateImageDisplay();
    }

    function nextImageGrid() {
        if (totalGridImages <= 1) return;

        currentGridIndex = (currentGridIndex + 1) % totalGridImages;
        updateImageDisplay();
    }

    function updateImageDisplay() {
        const imageItems = document.querySelectorAll('.instagram-item[data-image-index]');
        const counter = document.getElementById('imageCounter');
        const prevBtn = document.getElementById('prevImageBtn');
        const nextBtn = document.getElementById('nextImageBtn');

        // Update visibility of images
        imageItems.forEach((item, index) => {
            if (index === currentGridIndex) {
                item.style.opacity = '1';
                item.style.transform = 'scale(1)';
                item.style.zIndex = '10';
            } else {
                item.style.opacity = '0.7';
                item.style.transform = 'scale(0.95)';
                item.style.zIndex = '1';
            }
        });

        // Update counter
        if (counter) {
            counter.textContent = `${currentGridIndex + 1} / ${totalGridImages}`;
        }

        // Update navigation buttons
        if (prevBtn && nextBtn) {
            prevBtn.classList.toggle('disabled', totalGridImages <= 1);
            nextBtn.classList.toggle('disabled', totalGridImages <= 1);
        }
    }

    // Lightbox Functions
    function openLightbox(index) {
        currentImageIndex = index;
        const lightbox = document.getElementById('lightboxOverlay');
        const lightboxImage = document.getElementById('lightboxImage');
        const counter = document.getElementById('lightboxCounter');

        lightboxImage.src = productImages[currentImageIndex];
        counter.textContent = `${currentImageIndex + 1} / ${productImages.length}`;

        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    function closeLightbox() {
        const lightbox = document.getElementById('lightboxOverlay');
        lightbox.classList.remove('active');
        document.body.style.overflow = 'auto';
    }

    function nextImage() {
        currentImageIndex = (currentImageIndex + 1) % productImages.length;
        document.getElementById('lightboxImage').src = productImages[currentImageIndex];
        document.getElementById('lightboxCounter').textContent = `${currentImageIndex + 1} / ${productImages.length}`;
    }

    function prevImage() {
        currentImageIndex = (currentImageIndex - 1 + productImages.length) % productImages.length;
        document.getElementById('lightboxImage').src = productImages[currentImageIndex];
        document.getElementById('lightboxCounter').textContent = `${currentImageIndex + 1} / ${productImages.length}`;
    }

    // Product Actions
    function addToCart(productId) {
        showNotification('¡Producto agregado al carrito!', 'success');
    }

    function toggleWishlist(productId) {
        showNotification('Producto agregado a favoritos', 'success');
    }

    // Notification system
    function showNotification(message, type = 'success') {
        const notification = document.createElement('div');
        notification.className = `notification notification-${type}`;
        notification.innerHTML = `
            <div class="notification-content">
                <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                <span>${message}</span>
            </div>
        `;

        document.body.appendChild(notification);
        setTimeout(() => notification.classList.add('show'), 100);
        setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => {
                if (document.body.contains(notification)) {
                    document.body.removeChild(notification);
                }
            }, 300);
        }, 3000);
    }

    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
        const lightbox = document.getElementById('lightboxOverlay');
        if (lightbox.classList.contains('active')) {
            if (e.key === 'Escape') {
                closeLightbox();
            } else if (e.key === 'ArrowLeft') {
                prevImage();
            } else if (e.key === 'ArrowRight') {
                nextImage();
            }
        } else {
            // Grid navigation when lightbox is not active
            if (e.key === 'ArrowLeft') {
                previousImage();
            } else if (e.key === 'ArrowRight') {
                nextImageGrid();
            }
        }
    });
</script>
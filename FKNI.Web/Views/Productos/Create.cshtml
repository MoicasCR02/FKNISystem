@model FKNI.Application.DTOs.ProductosDTO
@{
    ViewData["Title"] = "Crear Producto";
}

<style>
    /* Solo utilidades puntuales que no rompen tu nude CSS */
    .contenido-ajustado-footer {
        padding-bottom: 180px;
    }

    .img-thumb {
        max-width: 120px;
        max-height: 120px;
        border-radius: 8px;
    }

    .gap-3 {
        gap: 1rem;
    }
</style>

<section class="section">
    <div class="container contenido-ajustado-footer">
        <header class="section-header">
            <h2 class="section-title">Crear Producto</h2>
            <p class="section-subtitle">Registra un nuevo producto con su información, imágenes y etiquetas.</p>
        </header>

        <div class="card shadow-md">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data" id="formCreateProducto">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="form-error mb-3"></div>

                    <!-- Nombre -->
                    <div class="form-group">
                        <label asp-for="NombreProducto" class="form-label"></label>
                        <input asp-for="NombreProducto" class="form-input" />
                        <span asp-validation-for="NombreProducto" class="form-error"></span>
                    </div>

                    <!-- Descripción -->
                    <div class="form-group">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <textarea asp-for="Descripcion" class="form-textarea" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="form-error"></span>
                    </div>

                    <!-- Precio y Stock -->
                    <div class="grid grid-cols-2">
                        <div class="form-group">
                            <label asp-for="Precio" class="form-label"></label>
                            <input asp-for="Precio" type="number" step="0.01" class="form-input" />
                            <span asp-validation-for="Precio" class="form-error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Stock" class="form-label"></label>
                            <input asp-for="Stock" type="number" class="form-input" />
                            <span asp-validation-for="Stock" class="form-error"></span>
                        </div>
                    </div>

                    <!-- Categoría -->
                    <div class="form-group">
                        <label asp-for="IdCategoria" class="form-label"></label>
                        @Html.DropDownListFor(
                        m => m.IdCategoria,
                                                new SelectList(ViewBag.ListCategoria, "IdCategoria", "NombreCategoria"),
                                                "Seleccione una categoría",
                                                new { @class = "form-select" }
                                                )
                        <span asp-validation-for="IdCategoria" class="form-error"></span>
                    </div>

                    <!-- Etiquetas (multi-select) -->
                    <div class="form-group">
                        <label class="form-label">Etiquetas</label>
                        <select id="selectedEtiquetas" name="selectedEtiquetas"
                                class="form-select" asp-items="ViewBag.ListEtiquetas"
                                multiple="multiple"></select>
                        <small class="form-help">Use Ctrl o Cmd para seleccionar varias.</small>
                        <span id="errorEtiquetas" class="form-error"></span>
                    </div>

                    <!-- Imágenes (SE MANTIENE COMO ANTES, solo se alinea al diseño) -->
                    <div class="form-group">
                        <label for="ImageFiles" class="form-label">Imágenes del producto</label>
                        <input type="file" id="ImageFiles" name="ImageFiles" multiple accept="image/*" class="form-input" />
                        <small class="form-help">Máximo 5 imágenes, 2 MB cada una.</small>

                        <div id="previewList" class="mt-3 d-flex flex-wrap gap-3"></div>
                        <span id="errorImagenes" class="form-error"></span>
                    </div>

                    <!-- Acciones -->
                    <div class="flex justify-between items-center mt-6">
                        <a asp-action="IndexAdmin" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </a>
                        <button type="submit" id="btnSubmit" class="btn btn-primary">
                            <i class="bi bi-save me-2"></i> Guardar producto
                            <span id="spinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const form = document.getElementById('formCreateProducto');
        const btnSubmit = document.getElementById('btnSubmit');
        const spinner = document.getElementById('spinner');
        const previewContainer = document.getElementById('previewList');
        const inputImgs = document.getElementById('ImageFiles');
        const errorImgs = document.getElementById('errorImagenes');
        const errorTags = document.getElementById('errorEtiquetas');

        // Preview imágenes (igual que antes)
        inputImgs.addEventListener('change', function (event) {
            previewContainer.innerHTML = '';
            errorImgs.textContent = '';

            const files = Array.from(event.target.files);
            const MAX_FILES = 5;
            const MAX_MB = 2;
            const MAX_BYTES = MAX_MB * 1024 * 1024;

            if (files.length > MAX_FILES) {
                errorImgs.textContent = `Máximo ${MAX_FILES} imágenes.`;
                inputImgs.value = '';
                return;
            }
            for (const f of files) {
                if (f.size > MAX_BYTES) {
                    errorImgs.textContent = `Cada imagen debe pesar ≤ ${MAX_MB} MB.`;
                    inputImgs.value = '';
                    return;
                }
            }

            files.forEach(file => {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'img-thumb';
                    previewContainer.appendChild(img);
                };
                reader.readAsDataURL(file);
            });
        });

        function validateTags() {
            errorTags.textContent = '';
            const sel = document.getElementById('selectedEtiquetas');
            if ([...sel.selectedOptions].length === 0) {
                errorTags.textContent = "Seleccione al menos una etiqueta.";
                return false;
            }
            return true;
        }

        form.addEventListener('submit', function (e) {
            errorImgs.textContent = '';
            if (!validateTags()) {
                e.preventDefault();
                return;
            }
            if (!form.checkValidity()) return;

            btnSubmit.disabled = true;
            spinner.classList.remove('d-none');
        });
    </script>
}
